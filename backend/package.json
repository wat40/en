{
  "name": "@enrichment/backend",
  "version": "1.0.0",
  "description": "Enrichment platform backend API server",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc && tsc-alias",
    "start": "node dist/index.js",
    "test": "vitest",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "db:migrate": "tsx src/scripts/migrate.ts",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:reset": "tsx src/scripts/reset.ts",
    "db:generate": "drizzle-kit generate:pg",
    "db:push": "drizzle-kit push:pg",
    "db:studio": "drizzle-kit studio"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "compression": "^1.7.4",
    "morgan": "^1.10.0",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "joi": "^17.10.2",
    "socket.io": "^4.7.2",
    "redis": "^4.6.8",
    "pg": "^8.11.3",
    "drizzle-orm": "^0.28.6",
    "drizzle-kit": "^0.19.13",
    "uuid": "^9.0.0",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.5",
    "rate-limiter-flexible": "^3.0.8",
    "express-rate-limit": "^6.10.0",
    "express-validator": "^7.0.1",
    "winston": "^3.10.0",
    "winston-daily-rotate-file": "^4.7.1",
    "speakeasy": "^2.0.0",
    "qrcode": "^1.5.3",
    "nodemailer": "^6.9.5",
    "aws-sdk": "^2.1467.0",
    "openai": "^4.11.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.14",
    "@types/compression": "^1.7.3",
    "@types/morgan": "^1.9.5",
    "@types/bcryptjs": "^2.4.4",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/uuid": "^9.0.4",
    "@types/multer": "^1.4.7",
    "@types/speakeasy": "^2.0.7",
    "@types/qrcode": "^1.5.2",
    "@types/nodemailer": "^6.4.11",
    "@types/pg": "^8.10.2",
    "@types/node": "^20.6.3",
    "typescript": "^5.2.2",
    "tsx": "^3.12.10",
    "tsc-alias": "^1.8.7",
    "vitest": "^0.34.6",
    "@vitest/coverage-v8": "^0.34.6",
    "@vitest/ui": "^0.34.6",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.13"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
